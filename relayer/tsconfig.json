{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./src",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"]
}
